alias rm='rm -rIv'
alias cp='cp -rv'
alias mv='mv -v'
alias mkdir='mkdir -v'
alias rmdir='rmdir -v'
alias ..='cd ..'
alias cat='bat'
alias grep='rg'
alias la='exa --icons -a --group-directories-first'
alias ll='exa --icons -lah --group-directories-first'
alias ls='exa --icons --group-directories-first'
alias tree='exa --icons --tree'

alias bsrc="nano $HOME/.config/bspwm/bspwmrc"
alias sxrc="nano $HOME/.config/sxhkd/sxhkdrc"
alias picomrc="nano $HOME/.config/picom/picom.conf"
alias dunstrc="nano $HOME/.config/dunst/dunstrc"
alias rofirc="nano $HOME/.config/rofi/config.rasi"
alias kittyrc="nano $HOME/.config/kitty/kitty.conf"
alias polybarrc="nano $HOME/.config/polybar/config.ini"
alias zshrc="nano $HOME/.config/zsh/.zshrc"
alias xinitrc="nano $HOME/.config/X11/xinitrc"

alias updates="checkupdates; paru -Qum"
alias rs="curl --data-binary @- https://paste.rs | xclip -selection clipboard"

